<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:weightSum="1"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_weight="0.6"
                >

            <TextView
                android:id="@+id/txt_po"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/po_no"
                android:textColor="@color/primary_text"
                android:textStyle="bold"
                android:textSize="14dp"
                android:layout_weight=".60"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/po_no"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/primary_text"
                android:textStyle="normal"
                android:textSize="14dp"
                android:layout_weight=".40"/>
                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_weight="0.4"
                >

                <TextView
                    android:id="@+id/txt_eporder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Order_no"
                    android:textColor="@color/primary_text"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:layout_weight=".60"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/eporder"
                    android:padding="5dp"
                    android:textColor="@color/primary_text"
                    android:textStyle="normal"
                    android:textSize="14dp"
                    android:singleLine="true"
                    android:layout_weight=".35"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:weightSum="1"
            >
            <TextView
                android:id="@+id/txt_poqty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/po_quantity"
                android:textColor="@color/primary_text"
                android:textStyle="bold"
                android:textSize="14dp"
                android:layout_weight=".6"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/po_quantity"
                android:padding="5dp"
                android:textColor="@color/primary_text"
                android:textStyle="bold"
                android:textSize="14dp"
                android:layout_weight=".4"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:weightSum="1"
            >
            <TextView
                android:id="@+id/txt_receive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/receive_qty"
                android:textColor="@color/primary_text"
                android:textStyle="bold"
                android:textSize="14dp"
                android:layout_weight=".6"/>

            <EditText
                android:id="@+id/receive_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:layout_weight="0.4"
                android:singleLine="true"
                android:textAllCaps="false"
                android:textSize="14dp"
                android:maxLength="7"
                android:hint="Enter the Receive Qty"
                android:textColor="@color/primary_text"
                android:theme="@style/MyEditText"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>