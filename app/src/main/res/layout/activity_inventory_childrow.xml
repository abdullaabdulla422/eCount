<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_dashboard_list"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:weightSum="2"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:weightSum="1"
                android:orientation="horizontal">



            <TextView
                android:id="@+id/txt_unitid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/unit_id"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_weight="0.65"
                android:textColor="@color/primary_text"/>

            <TextView
                android:id="@+id/unit_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_weight="0.35"
                android:textColor="@color/primary_text"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:weightSum="1"
                android:orientation="horizontal">

                <TextView
                android:id="@+id/txt_make"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/make"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_weight="0.65"
                android:textColor="@color/primary_text"/>
            <TextView
                android:id="@+id/make_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="bb"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_weight="0.35"
                android:textColor="@color/primary_text"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:weightSum="2"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:weightSum="1"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_model"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/model"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_weight="0.65"
                android:textColor="@color/primary_text"/>

            <TextView
                android:id="@+id/model_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="aa"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_weight="0.35"
                android:textColor="@color/primary_text"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:weightSum="1"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_serial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/serial_no"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_weight="0.65"
                android:textColor="@color/primary_text"/>
            <TextView
                android:id="@+id/serial_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="13"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_weight="0.35"
                android:textColor="@color/primary_text"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/desc_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="desc"
                android:singleLine="true"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@color/primary_text"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>