                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:weightSum="1"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text= "@string/po_qty"
                        android:textSize="14dp"
                        android:layout_weight="0.6"
                        android:textColor="@color/primary_text"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/po_qty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="14dp"
                        android:layout_weight="0.4"
                        android:singleLine="true"
                        android:padding="3dp"
                        android:textColor="@color/primary_text"
                        android:textStyle="bold"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:weightSum="1"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text= "@string/receive_qty"
                        android:textSize="14dp"
                        android:layout_weight="0.6"
                        android:textColor="@color/primary_text"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/receive_qty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="14dp"
                        android:layout_weight="0.4"
                        android:singleLine="true"
                        android:padding="3dp"
                        android:textColor="@color/primary_text"
                        android:textStyle="bold"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary_text"

                        android:text="@string/po"
                        android:textStyle="bold"
                        android:layout_weight="0.6"
                        android:textSize="14dp"
                        />
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"

                        >
                        <EditText
                            android:id="@+id/po_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:singleLine="true"
                            android:hint="Enter the PO Number"
                            android:textSize="14dp"
                            android:layout_marginRight="35dp"
                            android:textAllCaps="false"
                            android:textColor="@color/primary_text"
                            android:theme="@style/MyEditText"
                            />

                        <ImageView
                            android:id="@+id/po_search"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="end|center"
                            android:src="@drawable/search"
                            tools:ignore="ContentDescription" />
                    </FrameLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/filterContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="end"
                    android:layout_margin="5dp"
                    >
                    <com.ebs.ecount.uidesigns.MaterialRippleLayout
                        style="@style/RippleStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:rippleColor="@color/main_color_grey_200" >
                        <Button
                            android:id="@+id/add_po"
                            android:layout_width="80dp"
                            android:layout_height="30dp"
                            android:text="Add PO"
                            android:textSize="14dp"
                            android:background="@drawable/round_corner_label"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:textColor="@color/white"

                            />
                    </com.ebs.ecount.uidesigns.MaterialRippleLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="@color/material_blue_800"
                android:layout_margin="3dp"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:divider="@color/divider"
        android:dividerHeight="1.5dp"
        android:id="@+id/po_list"
        android:layout_margin="5dp"
        style="@style/goodList"
        android:choiceMode="multipleChoice"
        android:layoutAnimation="@anim/layout_bottom_to_top_slide"
        >

    </ListView>


