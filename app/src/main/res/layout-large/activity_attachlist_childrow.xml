<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/select_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:id="@+id/above"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        >
        <TextView
            android:id="@+id/attch_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/equipid"
            android:padding="5dp"
            android:textSize="18dp"
            android:layout_weight="0.5"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:gravity="center"
            />


        <TextView
            android:id="@+id/attch_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="122BC"
            android:padding="5dp"
            android:textSize="18dp"
            android:layout_weight="0.5"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:gravity="center"
            tools:ignore="HardcodedText" />


    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/above"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        >
        <TextView
            android:id="@+id/equp_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/attachments"
            android:padding="5dp"
            android:textSize="18dp"
            android:layout_weight="0.5"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/equp_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12312332"
            android:padding="5dp"
            android:layout_weight="0.5"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:gravity="center"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        >
        <ImageView
            android:id="@+id/img_selector"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="7dp"
            android:layout_weight="1"
            android:background="@drawable/delete_cross"
            android:visibility="gone"
            tools:ignore="ContentDescription" />
    </LinearLayout>


</RelativeLayout>


