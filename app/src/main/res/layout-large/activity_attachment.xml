<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/above"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/material_blue_800_new"
        >


        <ImageView
            android:id="@+id/img_back"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/back"
            tools:ignore="ContentDescription" />

        <com.ebs.ecount.uidesigns.MaterialRippleLayout
            style="@style/RippleStyle"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            app:rippleColor="@color/main_color_grey_200" >
            <Button
                android:id="@+id/back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/material_blue_800_new"
                android:inputType="textCapSentences"
                android:textAllCaps="false"
                android:text="@string/back"
                android:textColor="#fff"
                android:textSize="18sp"

                />
        </com.ebs.ecount.uidesigns.MaterialRippleLayout>

        <TextView
            android:id="@+id/txt_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:text="@string/handwrites_title"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginRight="85dp"/>

    </LinearLayout>

    <ScrollView
        android:layout_below="@+id/above"
        android:layout_marginBottom="75dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:isScrollContainer="true"
        android:scrollbarDefaultDelayBeforeFade="3000"
        android:scrollbarFadeDuration="2000"
        android:scrollbars="none"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
           >

    <LinearLayout
        android:id="@+id/mid"
        android:layout_below="@+id/above"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:weightSum="2"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txt_unitid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/unit_id"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:layout_weight="0.55"
                        android:textColor="@color/primary_text"/>

                    <EditText
                        android:id="@+id/unit_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="12"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:layout_weight="0.45"
                        android:maxLength="12"
                        android:singleLine="true"
                        android:inputType="textCapCharacters"
                        android:textColor="@color/primary_text"
                        android:theme="@style/MyEditText"
                        tools:ignore="HardcodedText" />
                    <TextView
                        android:id="@+id/txt_make"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/make"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:layout_weight="0.55"
                        android:textColor="@color/primary_text"/>
                    <EditText
                        android:id="@+id/make_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="bb"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:layout_weight="0.45"
                        android:maxLength="3"
                        android:singleLine="true"
                        android:inputType="textCapCharacters"
                        android:theme="@style/MyEditText"
                        android:textColor="@color/primary_text"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:weightSum="2"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txt_model"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/model"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:layout_weight="0.55"
                        android:textColor="@color/primary_text"/>

                    <EditText
                        android:id="@+id/model_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="aa"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:layout_weight="0.45"
                        android:maxLength="12"
                        android:singleLine="true"
                        android:inputType="textCapCharacters"
                        android:textColor="@color/primary_text"
                        android:theme="@style/MyEditText"
                        tools:ignore="HardcodedText" />
                    <TextView
                        android:id="@+id/txt_serial"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/serial_no"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:layout_weight="0.55"
                        android:textColor="@color/primary_text"/>
                    <EditText
                        android:id="@+id/serial_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="13"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:layout_weight="0.45"
                        android:maxLength="12"
                        android:textColor="@color/primary_text"
                        android:theme="@style/MyEditText"
                        tools:ignore="HardcodedText"
                        android:inputType="textCapCharacters|textMultiLine"
                        android:overScrollMode="always"
                        android:scrollbarStyle="insideInset"
                        android:scrollbars="vertical"
                        android:singleLine="true"/>
                </LinearLayout>

            </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/material_blue_800"
       />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/txt_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/notes"
            android:textColor="@color/primary_text"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:textSize="18dp"/>


        <EditText
            android:id="@+id/notes"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="0.25"
            android:gravity="start"
            android:singleLine="false"
            android:maxLength="80"
            android:textAllCaps="false"
            android:theme="@style/MyEditText"
            android:inputType="textNoSuggestions"
            android:background="@drawable/round_corner"
            android:textColor="@color/primary_text"
            android:textColorHint="@color/primary_text"
            android:textSize="18sp" />
    </LinearLayout>

            <LinearLayout
                android:id="@+id/attach"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:weightSum="1">
                <TextView
                    android:id="@+id/txt_attachment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/attachment"
                    android:textColor="@color/primary_text"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_weight="1"
                    />

            </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/mid"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:id="@+id/Capture_image"
        android:orientation="horizontal"
        android:layout_margin="15dp"
        android:weightSum="1" >

        <Gallery
            android:id="@+id/Image_gallery"
            android:layout_gravity="left"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <android.support.design.widget.CoordinatorLayout
        android:layout_above="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="10dp"
        android:id="@+id/coordinatorLayout"
        >

        <android.support.design.widget.FloatingActionButton
            android:layout_alignParentRight="true"
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:src="@drawable/ic_add"
            app:backgroundTint="@color/material_blue_800"
            />

    </android.support.design.widget.CoordinatorLayout>


        <LinearLayout
            android:id="@+id/footer"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_gravity="center">

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="3dp"
                android:background="@color/material_blue_800"
               />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center">



        <com.ebs.ecount.uidesigns.MaterialRippleLayout
            style="@style/RippleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            app:rippleColor="@color/main_color_grey_200" >
            <Button
                android:id="@+id/btn_submit"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="@string/submit"
                android:background="@drawable/round_corner_label"
                android:textColor="#fff"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="18dp"
                />
        </com.ebs.ecount.uidesigns.MaterialRippleLayout>

    </LinearLayout>
        </LinearLayout>


</RelativeLayout>